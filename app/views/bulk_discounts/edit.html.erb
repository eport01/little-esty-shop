<h4><center> Edit Discount Page</center><h4>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f|%>
  <ul><%= f.label :discount, "Bulk Discount Percentage" %>
  <%= f.text_field :discount , value: @bulk_discount.discount%></ul>

  <ul><%= f.label :quantity_threshold, "Quantity Threshold" %>
  <%= f.text_field :quantity_threshold, value: @bulk_discount.quantity_threshold %></ul>

  <%= f.submit "Submit"%>
<%end%>